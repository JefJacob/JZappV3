@model IEnumerable<JZappV3.Models.Job>

@{
    ViewBag.Title = "IndexUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Posted Jobs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.JobType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinishDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommitedBy)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.JobType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDateTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FinishDateTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PostedBy)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CommitedBy)
    </td>
    <td>
        @if (item.CommitedBy == null)
        {@Html.ActionLink("Edit", "Edit", new { id = item.JobId });
        @:|    @Html.ActionLink("Delete", "Delete", new { id = item.JobId });
        }
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.JobId })
    </td>
</tr>
}

</table>
